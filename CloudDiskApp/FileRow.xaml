<UserControl x:Class="CloudDiskApp.FileRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudDiskApp"
             mc:Ignorable="d" 
             Name="FileRowControl"
             d:DesignHeight="30" d:DesignWidth="500">
    <Grid Background="AliceBlue">
        <TextBlock x:Name="FilePathTextBlock"
                   Text="{Binding ElementName=FileRowControl, Path=CloudFileInfo.FilePath}"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Left" Width="200"/>
        <TextBlock x:Name="DirTextBlock"
                   Margin="300,0,0,0"
                   HorizontalAlignment="Left" Width="200"/>
    </Grid>
</UserControl>

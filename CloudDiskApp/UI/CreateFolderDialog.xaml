<Window x:Class="CloudDiskApp.CreateFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDiskApp"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Title="CreateFolderDialog">
    <Grid Margin="15">
        <Label Name="HintLabel" Height="25" Margin="6,0,6,0" VerticalAlignment="Top"/>
        <TextBox Name="InputBox" Height="30" Margin="6,25,6,0" VerticalAlignment="Top"/>
        <Button Name="OKButton" Height="30" Width="50" Margin="0,65,0,0" 
                VerticalAlignment="Top" HorizontalAlignment="Center"
                Click="OKButton_Click">OK</Button>
    </Grid>
</Window>

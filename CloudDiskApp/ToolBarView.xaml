<UserControl x:Class="CloudDiskApp.ToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudDiskApp"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="LightCyan">
        <Button Name="UpButton" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"
                        Width="30" ToolTip="Up" Click="UpButton_Click">
            <Image Source="resource\UpFolder.png"/>
        </Button>
        <Button Name="AddFileButton" HorizontalAlignment="Left" Margin="40,5,0,0" VerticalAlignment="Top"
                        Width="30" ToolTip="AddFile" Click="AddFileButton_Click">
            <Image Source="resource\AddFile.png"/>
        </Button>
    </Grid>
</UserControl>
